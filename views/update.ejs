<%-include('header') %>
        

              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
                <!-- Form controls -->
              <form method="post" action="/EditRecord" enctype="multipart/form-data">
                <input type="hidden" name="EdtID" value="<%=SingleAdmin.id %>">
                <% var nam =SingleAdmin.name.split(" ") %>
                <div class="col-md-6">
                  <div class="card mb-4">
                    <h5 class="card-header">Form Controls</h5>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="defaultFormControlInput" class="form-label">Enter First Name</label>
                            <input type="text" class="form-control" name="fname" value="<%=nam[0]%>"/>
                        </div>
                        <div class="mb-3">
                            <label for="defaultFormControlInput" class="form-label">Enter Last Name</label>
                            <input type="text" class="form-control" name="lname" id="defaultFormControlInput" value="<%=nam[1]%>"/>
                        </div>
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Email address</label>
                        <input
                          type="email"
                          name="email"
                          class="form-control"
                          value="<%=SingleAdmin.email %>"
                          id="exampleFormControlInput1"
                          placeholder="name@example.com"
                        />
                      </div>
                      <div class="mb-3">
                      <label for="html5-password-input" class="col-md-2 col-form-label">Password</label>
                      <div class="col-md-10">
                        <input class="form-control" type="password" name="password" value="<%=SingleAdmin.password %>" id="html5-password-input" />
                      </div>
                      <div class="row gy-3">
                        <div class="md-3">
                          <label for="html5-password-input" class="col-md-6 col-form-label">Hobby</label>
                          <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" name="hobby[]" value="Reading" <% if(SingleAdmin.hobby.includes('Reading')){%><%="checked"%><% }%>>Reading
                            <!-- <label class="form-check-label" for="defaultCheck2"> Reading </label> -->
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="hobby[]" value="Adventure"  <% if(SingleAdmin.hobby.includes('Adventure')){%><%="checked"%><% }%>>Adventure
                            <!-- <label class="form-check-label" for="defaultCheck2"> Adventure </label> -->
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="hobby[]" value="Music" <% if(SingleAdmin.hobby.includes('Music')){%><%="checked"%><% }%>>Music
                            <!-- <label class="form-check-label" for="defaultCheck3"> Music </label> -->
                          </div>
                        </div>
                        <div class="md-3">
                          <!-- <small class="text-light fw-semibold">Radio</small> -->
                          <label for="html5-password-input" class="col-md-6 col-form-label">Gender</label>
                          <div class="form-check mt-2">
                            <input
                              class="form-check-input"
                              name="gender"
                              type="radio"
                              value="male" <% if(SingleAdmin.gender==('male')){ %><%= 'checked' %> <% } %>>Male
                            <!-- <label class="form-check-label">  </label> -->
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              name="gender"
                              type="radio"
                              value="female" <% if(SingleAdmin.gender==('female')){ %><%= 'checked' %> <% } %>>Female
                            <!-- <label class="form-check-label">  </label> -->
                        </div>
                      </div>
                    </div>
                      </div>
                      <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">Select city</label>
                        <% var city=['Surat','Vadodra','Rajkot','Baruch'] %>
                        <select class="form-select" name="city" id="exampleFormControlSelect1" aria-label="Default select example">
                          <option selected>Select City</option>
                          <% for(i=0; i<city.length; i++) {%>
                          <option value="<%=city[i]%>" <% if(SingleAdmin.city==city[i]){%><%="selected"%><%}%>><%=city[i]%></option>
                          <% } %>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input class="form-control" type="file" name="image" id="formFile" />
                        <img src="<%= SingleAdmin.image %>"alt="" height="50" width="50">
                      </div>
                      <div>
                        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3"><%=SingleAdmin.description %></textarea>
                      </div>
                      <div class="mt-3">
                        <input type="submit" value="Add Admin" name="submit" class="btn btn-danger">
                      </div>
                      
                    </div>
                  </div>
                </div>
              </form>

           <%-include('footer') %>